{
  "name": "openapi-mcp-server",
  "keywords": [
    "openapi",
    "mcp",
    "server",
    "proxy"
  ],
  "version": "1.2.0-beta05",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:dev": "vitest watch",
    "build": "tsc -build && node scripts/build-cli.js",
    "dev": "tsx watch scripts/start-proxy.ts",
    "parse-openapi": "tsx scripts/parse-openapi.ts",
    "start": "node bin/cli.mjs ./openapi/todoist.yaml"
  },
  "bin": {
    "openapi-mcp-server": "bin/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "axios": "^1.7.9",
    "chalk": "^5.4.1",
    "express": "^4.21.2",
    "form-data": "^4.0.1",
    "js-yaml": "^4.1.0",
    "mustache": "^4.2.0",
    "openapi-client-axios": "^7.5.5",
    "openapi-schema-validator": "^12.1.3",
    "openapi-types": "^12.1.3",
    "which": "^5.0.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@esbuild/linux-x64": "0.24.2",
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/json-schema": "^7.0.15",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.17.16",
    "@types/which": "^3.0.4",
    "@vitest/coverage-v8": "2.1.8",
    "esbuild": "^0.24.2",
    "multer": "1.4.5-lts.1",
    "openai": "^4.80.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "description": "OpenAPI Model Context Protocol Proxy",
  "files": [
    "bin",
    "dist",
    "src",
    "README.md"
  ],
  "engines": {
    "node": ">=16"
  }
}
